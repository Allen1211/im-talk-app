<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allen.imsystem.user.mappers.IdPoolMapper">

    <!--  查询一个未使用的群id-->
    <select id="selectUnUsedGid" resultType="java.lang.String">
        SELECT gid FROM gid_pool WHERE has_used=0 LIMIT 1
    </select>

    <!--  逻辑删除使用过的群id-->
    <update id="softDeleteUsedGid" parameterType="java.lang.String">
        UPDATE gid_pool SET has_used = 1 WHERE gid=#{gid}
    </update>

    <select id="selectNextUnUsedUid" resultType="com.allen.imsystem.id.UidPool">
        SELECT * FROM uid_pool WHERE has_used = 0 LIMIT 1
    </select>

    <update id="sortDeleteUsedUid" parameterType="java.lang.String">
        UPDATE uid_pool SET has_used = 1 WHERE uid=#{uid}
    </update>

    <insert id="insertBatchIntoUidPool" parameterType="java.util.List" useGeneratedKeys="false">
        insert into uid_pool
        (uid)
        values
        <foreach collection="list" item="str"  separator=",">
            (#{str})
        </foreach>
    </insert>

    <insert id="insertBatchIntoGidPool" parameterType="java.util.List" useGeneratedKeys="false">
        insert into gid_pool
        (gid)
        values
        <foreach collection="list" item="str"  separator=",">
            (#{str})
        </foreach>
    </insert>
</mapper>